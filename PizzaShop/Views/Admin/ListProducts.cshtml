@model IEnumerable<PizzaShop.Models.Product>

@{
    ViewBag.Title = "ListProducts";
}

<h2>ListProducts</h2>

<p>
    @Html.ActionLink("Create New Product", "CreateProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInSortiment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsInSortiment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.ID })
        </td>
    </tr>
}

</table>
