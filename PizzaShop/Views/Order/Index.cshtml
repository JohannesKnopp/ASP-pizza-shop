@model IEnumerable<PizzaShop.Models.CartViewModel>

@{
    ViewBag.Title = "Bestellübersicht";
}

@Scripts.Render("~/bundles/jquery")

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullPrice) €
                </td>
            </tr>
        }
    </table>
    <h3>Gesamtpreis: @ViewBag.TotalPrice €</h3>

    <div>
        <form>
            <input type="radio" name="payment" value="Lieferung" checked="checked">Lieferung<br />
            <input type="radio" name="payment" value="Abholung">Abholung<br />
        </form>
    </div>

    <div>
        <button type="button" onclick="window.location.href='/Product'" class="btn btn-primary" data-toggle="popover" title="Weitershoppen">
            Weitershoppen!
        </button>

        <button style="float: right" type="button" onclick="window.location.href='/Order/Finished'" class="btn btn-primary" data-toggle="popover" title="Zur Kassa">
            Zahlungspflichtig bestellen
        </button>
    </div>
}